<%- include('template/cabecera', {tituloPagina: 'Iniciar sesión', estilo: 'login.css'}) %>
<body>
  <%- include('template/navReg') %>
  <section id="login-section" class="py-5 bg-light container">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <h2 class="text-center mb-5">Iniciar Sesión (Patrocinador)</h2>
          <form method="POST" action="/patrocinadores/login" novalidate>
            <div class="mb-3">
              <label for="email" class="form-label">Correo electrónico</label>
              <input type="email" class="form-control" id="email" name="email" required>
              <div class="invalid-feedback">Ingresa un correo válido.</div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Contraseña</label>
              <div class="input-group">
                <input type="password" class="form-control" id="password" name="password" required>
                <button type="button" class="btn btn-outline-secondary" id="toggle-password">
                  <i class="bi bi-eye-slash-fill"></i>
                </button>
              </div>
              <div class="invalid-feedback">Ingresa tu contraseña.</div>
            </div>

            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="remember">
              <label class="form-check-label" for="remember">Recuérdame</label>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
            </div>

            <div class="text-center mt-3">
                <p>¿No tienes una cuenta?   
                  <a href="#" id="mostrar-registro">Regístrate aquí</a>
                </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <div id="registro-seccion" style="display: none;">
    <%- include('template/registro') %>
  </div>

  <% if (typeof error !== 'undefined') { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

  <%- include('template/footer') %>
  
  <!-- Bootstrap Bundle -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
   
  <!-- JS personalizado -->
  <script src="/js/login.js"></script>
</body>
</html>
