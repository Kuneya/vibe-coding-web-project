<%- include('template/cabecera',{tituloPagina:'Historias de Éxito',estilo:''}) %>
<%- include('template/navbar') %>
<body>
<section class="container my-5">
  <h2 class="text-center mb-4">Historias de Éxito</h2>
  <div class="row">
    <% historias.forEach(historia => { %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= historia.deportista %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Patrocinado por <%= historia.patrocinador %></h6>
            <p class="card-text"><%= historia.relato %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
<%- include('template/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script> 
</body>
</html>